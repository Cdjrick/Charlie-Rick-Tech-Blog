<li>
    <article class="homepage-post">
        <div class="post-title">
            <h4>{{title}}</h4>
        </div>
        <div class='post-text'>
            {{text}}
        </div>
        <div class="meta">
            by {{user.username}} on
            {{dateFormat created_at}}
            |
            <a href="/post/{{id}}">{{comments.length}} comment(s)</a>
        </div>
    </article>
</li>