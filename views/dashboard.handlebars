<section>
    <h2>Create New Post</h2>

    <form class="new-post-form">
        <div>
            <label for="post-title">Title</label>
            <input type="text" id="post-title" name="post-title" />
        </div>
        <div>
            <label for="post-text">Body</label>
            <textarea id="post-text" name="post-text"></textarea>
        </div>
        <button type="submit" class="btn">Create</button>
    </form>
</section>

{{#if posts.length}}
<section>
    <h2>Your Posts</h2>
    {{#each posts as |post|}}
    <ul class="dashboard-posts">
        <li>
            <article class="homepage-post">
                <div class="post-title">
                    <h4><a href='/post/{{id}}'>{{title}}</a></h4>
                </div>
                <div class='post-text'>
                    {{text}}
                </div>
                <div class="dashboard-meta">
                    by {{user.username}} on
                    {{dateFormat created_at}}
                    |
                    <a href="/post/{{id}}">{{comments.length}} comment(s)</a>
                </div>
                <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
            </article>
        </li>
    </ul>
    {{/each}}
</section>
{{/if}}

<script src="/js/add-post.js"></script>