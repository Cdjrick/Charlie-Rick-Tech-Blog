<article>
    <a href="/dashboard"> &larr; Back to dashboard</a>
    <h2>
        Edit Post
    </h2>
    <form class="edit-post-form">
        <div>
            <input name="post-title" type="text" value="{{post.title}}" />
            <textarea name="post-text" type="text">{{post.text}}</textarea>
        </div>
        <div>
            by you on {{dateFormat created_at}}
        </div>
        <div class='edit-post-btn-div'>
            <button type="submit" class='save-post-btn'>Save post</button>
            <button type="button" class="delete-post-btn">Delete post</button>
        </div>

    </form>

    <form class="comment-form">
        <div>
            <textarea name="comment-body" class='comment-textarea'></textarea>
        </div>

        <div>
            <button type="submit">add comment</button>
        </div>
    </form>
</article>

<script src="/js/edit-post.js"></script>
<script src="/js/delete-post.js"></script>
<script src="/js/comment.js"></script>